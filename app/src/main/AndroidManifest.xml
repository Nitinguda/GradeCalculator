<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.niu.cs.z1760203.gradecalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".quizActivity" android:windowSoftInputMode="adjustNothing">
        </activity>
        <activity android:name=".CourseActivity" />
        <activity android:name=".assignmentActivity" android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".testActivity" android:windowSoftInputMode="adjustNothing"></activity>
    </application>

</manifest>
