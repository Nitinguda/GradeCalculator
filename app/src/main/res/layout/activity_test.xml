<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.niu.cs.z1760203.gradecalculator.testActivity"
    android:background="@drawable/chalkboard">

    <ImageButton
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton18"
        android:src="@drawable/white"
        android:layout_above="@+id/imageButton20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="testToAssign"
        android:layout_marginBottom="10dp" />

    <ImageButton
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:id="@+id/helloButton"
        android:src="@drawable/white"
        android:onClick="pushMe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Assignments"
        android:id="@+id/textView42"
        android:layout_alignTop="@+id/imageButton18"
        android:textSize="20sp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tests"
        android:id="@+id/textView43"
        android:layout_alignTop="@+id/helloButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="26dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Test 1 :"
        android:id="@+id/textView44"
        android:textColor="#ffffff"
android:layout_marginTop="170dp"
        android:layout_marginLeft="60dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/test1editText"
        android:hint="Your test score"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="140dp"
        android:gravity="center_horizontal"
        android:layout_alignRight="@+id/textView39"
        android:layout_alignEnd="@+id/textView39" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Test 2 :"
        android:id="@+id/textView45"
        android:textColor="#ffffff"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Test 3 :"
        android:id="@+id/textView46"
        android:textColor="#ffffff"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="60dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/test2editText"
        android:hint="Your test score"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="140dp"
        android:gravity="center_horizontal"
        android:layout_alignRight="@+id/test1editText"
        android:layout_alignEnd="@+id/test1editText" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/test3editText"
        android:hint="Your test score"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="140dp"
        android:gravity="center_horizontal"
        android:layout_alignRight="@+id/test2editText"
        android:layout_alignEnd="@+id/test2editText" />

    <ImageButton
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton20"
        android:src="@drawable/white"
        android:onClick="goBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Go back"
        android:id="@+id/textView47"
        android:layout_alignTop="@+id/imageButton20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter your Test marks :"
        android:id="@+id/textView39"
        android:textColor="#ffffff"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="60dp" />


</RelativeLayout>
